<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.settings.ChangeNameFragment">

    <EditText
        android:id="@+id/settings_input_new_name"
        style="@style/defaultEditText"
        android:autofillHints=""
        android:hint="@string/settings_input_new_name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separatorSettingsName1"
        style="@style/separatorSettings"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_input_new_name"
         />

    <EditText
        android:id="@+id/settings_input_new_surname"
        style="@style/defaultEditText"
        android:autofillHints=""
        android:hint="@string/settings_input_new_surname"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatorSettingsName1" />

    <View
        android:id="@+id/separatorSettingsName2"
        style="@style/separatorSettings"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_input_new_surname" />

</androidx.constraintlayout.widget.ConstraintLayout>