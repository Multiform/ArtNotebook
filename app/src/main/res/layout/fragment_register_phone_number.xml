<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.register.RegisterPhoneNumberFragment">

    <TextView
        android:id="@+id/title"
        android:text="@string/register_input_phone"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:textSize="@dimen/large_text_size"
        android:layout_margin="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/registerInputPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:gravity="center"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorBlack"
        android:maxLines="1"
        android:hint="@string/register_input_phone_number"
        android:textColorHint="@color/colorPrimaryDark"
        android:autofillHints=""
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/registerBtnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_next"
        android:layout_margin="@dimen/normal_margin"
        app:backgroundTint="@color/colorPrimary"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>